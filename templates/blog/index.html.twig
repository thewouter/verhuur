{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}

{% block stylesheets %}
{{ parent()}}
<style>
    .row {
        display: flex;
    }

    .column {
        flex: 50%;
        padding-left: 20px;
        padding-right: 20px;
    }
</style>
{% endblock %}

{% block main %}

    <div class="column well" style="margin:5px">
        <p>
            {{ 'help.homepage' | trans | raw}}
        </p>
    </div>
    <div class="row">
         <div class='login column'>
            {% if not app.user %} {{ include('security/login.html.twig') }} {% endif %}
         </div>
         <div class='new_user column'>
             <p class="well"> {{'no_account' | trans}} </p>
             {{ form(new_user_form, {}) }}
         </div>
     </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

{% endblock %}
